{
	"compilerOptions": {
		"moduleResolution": "node",
		"lib": [
			"es2015",
			"es2016",
			"es2017",
		],
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
        "typeRoots": [
            "./typings",
            "../node_modules/@types"
        ]
	}
}